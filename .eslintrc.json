{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "rules": {
    "max-classes-per-file": [
      "error",
      {
        "ignoreExpressions": true,
        "max": 7
      }
    ],
    "no-restricted-syntax": [
      "error",
      "BinaryExpression[operator='of']"
    ]
  }
}
